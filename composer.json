{
    "name": "erayd/json-schema-info",
    "description": "Provides information about a JSON schema spec",
    "keywords": ["json", "schema", "json-schema", "spec", "info", "information"],
    "homepage": "https://github.com/erayd/json-schema-info",
    "type": "library",
    "require": {
        "php": "^5.3.0 || ^7.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.7",
        "satooshi/php-coveralls": "^1.0.1",
        "justinrainbow/json-schema": "^5.2"
    },
    "license": "ISC",
    "authors": [
        {
            "name": "Steve Gilberd",
            "email": "steve@erayd.net"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Erayd\\JsonSchemaInfo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Erayd\\JsonSchemaInfo\\Tests\\": "tests/Tests"
        }
    },
    "scripts": {
        "style-check": "phpcs --standard=ruleset.xml src && phpcs --standard=ruleset.xml tests",
        "style-fix": "phpcbf --standard=ruleset.xml src && phpcbf --standard=ruleset.xml tests",
        "test": "phpunit",
        "coverage": "phpunit --coverage-text"
    }
}
